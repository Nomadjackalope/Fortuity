<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/drop_down"
        android:layout_toStartOf="@+id/drop_down"
        android:id="@+id/view_state"
        android:minHeight="50dp">

        <TextView
            android:id="@+id/historytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:textSize="18sp"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text="@string/long_test"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:longClickable="false" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/close"
        android:clickable="true"
        android:paddingRight="5dp"
        android:layout_alignTop="@+id/view_state"
        android:layout_alignBottom="@+id/view_state"
        android:src="@drawable/abc_ic_clear_mtrl_alpha" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drop_down"
        android:layout_toLeftOf="@+id/close"
        android:layout_alignTop="@+id/view_state"
        android:layout_alignBottom="@+id/view_state"
        android:clickable="true"
        android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        android:layout_below="@+id/view_state" />

</RelativeLayout>