    <style name="UndoBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#EA222222</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:minWidth">300dp</item>
    </style>

    <style name="UndoBarMessage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxWidth">200dp</item>
    </style>

    <style name="UndoBarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:text">@string/undo</item>
        <item name="android:textColor">@color/amber</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="fav_roll_button">
        <item name="android:maxWidth">67dp</item>
    </style>

    <style name="Triangle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/arrow_test</item>
    </style>

    <style name="DemoTextView">
        <item name="android:background">#EA222222</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DiceButtons">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TutButton">
        <item name="android:background">@drawable/colorselect_green</item>
    </style>

</resources>
